<p id="notice"><%= notice %></p>

<h1 class="w3-text-red" style="text-shadow:1px 1px 0 #444">Quotes</h1>

<table class="w3-table-all w3-centered w3-hoverable w3-large w3-amber">
  <thead>
    <tr>
      <th class="w3-green" style="text-shadow:1px 1px 0 #444">Author</th>
      <th class="w3-green" style="text-shadow:1px 1px 0 #444">Quotation</th>
      <th class="w3-green" style="text-shadow:1px 1px 0 #444">Source</th>
      <th colspan="3" class="w3-green"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.author %></td>
        <td><%= quote.quotation %></td>
        <td><%= quote.source %></td>
        <td><%= link_to 'Show', quote , class:"w3-button w3-round w3-blue" %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) , class:"w3-button w3-round w3-blue" %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-round w3-blue" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path, class:"w3-button w3-round w3-blue" %>
